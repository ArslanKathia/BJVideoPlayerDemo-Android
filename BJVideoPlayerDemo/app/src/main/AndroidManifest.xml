<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.baijiahulian.bjvideoplayerdemo">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".video.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".video.PingActivity" />
        <activity
            android:name=".video.LauncherActivity"
            android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.baijiahulian.bjvideoplayerdemo.download.DownloadActivity" />
        <activity android:name="com.baijiahulian.bjvideoplayerdemo.download.DownloadManagerActivity" />
        <activity android:name="com.baijiahulian.bjvideoplayerdemo.download.DownloadDataSettingActivity"></activity>


    </application>


</manifest>